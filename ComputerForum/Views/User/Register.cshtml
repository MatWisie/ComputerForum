@model ComputerForum.ViewModels.UserRegisterVM;
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<form asp-action="Register" id="register-form" class="row gy-2 gx-3 align-items-center">
    <div class="col-md-6">
        <label for="emailInput" class="form-label mt-2">Enter Email</label>
        <input asp-for="Email" type="email" id="emailInput" class="form-control" placeholder="Email"/>
        @Html.ValidationMessageFor(model=>model.Email)
    </div>
    <div class="col-md-6">
        <label for="usernameInput" class="form-label mt-2" >Enter Username</label>
        <input asp-for="Name" type="text" id="usernameInput" class="form-control" placeholder="Username"/>
        @Html.ValidationMessageFor(model=>model.Name)
    </div>
    <div class="">
        <label for="passwordInput" class="form-label mt-2" >Enter Password</label>
        <input asp-for="Password" type="password" id="passwordInput" class="form-control" placeholder="Password"/>
        @Html.ValidationMessageFor(model=>model.Password)
    </div>
    <div class="">
        <label for="confirmPasswordInput" class="form-label mt-2">Confirm Password</label>
        <input type="password" id="confirmPasswordInput" class="form-control" placeholder="Confirm Password"/>
    </div>
    <div class="">
        <label asp-for="Age" class="form-label mt-2"></label>
        <input asp-for="Age" id="ageInput" type="number" class="form-control" />
        @Html.ValidationMessageFor(model=>model.Age)
    </div>
    <div class="">
        <label asp-for="Gender" class="form-label mt-2"></label>
        <select asp-for="Gender" class="form-select">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
        @Html.ValidationMessageFor(model=>model.Gender)
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary mt-4">Register</button>
    </div>
</form>
<small class="mt-4">Already have an account? - <a asp-area="" asp-controller="Home" asp-action="LogIn">Log in</a> instead</small>
