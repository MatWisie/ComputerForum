@model ComputerForum.ViewModels.UserLoginVM;
@{
    ViewData["Title"] = "LogIn";
}
<h1>Log In</h1>
<form asp-action="Login" itemid="login-form">
    <div class="form-group">
        <label  asp-for="Name"></label>
        <input asp-for="Name" type="text" id="nameInput" class="form-control" placeholder="Username"/>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Password"/>
    </div>
    <button class="submit-btn btn btn-primary" type="submit">Log In</button>
</form>
 <small>Don't have an account? - <a asp-area="" asp-controller="Home" asp-action="Register">Register</a> instead</small>
