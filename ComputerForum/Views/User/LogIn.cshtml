@model ComputerForum.ViewModels.UserLoginVM;
@{
    ViewData["Title"] = "LogIn";
}
<h1>Log In</h1>
<form asp-action="Login" id="login-form">
    <div class="row">
        <div class="col-md-6 col-12">
            <label  for="nameInput">Enter User Name</label>
            <input asp-for="Name" id="nameInput" class="form-control" placeholder="Name"/>
            @Html.ValidationMessageFor(model => model.Name, null, new {@class = "text-danger"})
        </div>

        <div class="col-md-6 col-12">
        
        <label>Enter Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Password"/>
        @Html.ValidationMessageFor(model => model.Password, null, new {@class = "text-danger"})
        </div>
    </div>
    <span class="text-danger">@Html.ValidationSummary()</span>
    <button type="submit" class="submit-btn btn btn-primary mt-2">Log In</button>
</form>
<a asp-controller="User" asp-action="ForgotPassword">Forgot password?</a><br/>
 <small>Don't have an account? - <a asp-controller="Home" asp-action="Register">Register</a> instead</small>
