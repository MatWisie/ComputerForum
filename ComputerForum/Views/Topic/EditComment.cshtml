@model ComputerForum.ViewModels.CommentEditVM

@{
    ViewData["Title"] = "EditComment";
}

<h1>Edit</h1>

<h4>TopicVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" value="@Model.Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>

                <input asp-for="Id" value="@Model.Id" type="hidden" class="form-control" />
                <input asp-for="QuotedStatement" value="@Model.QuotedStatement" type="hidden" class="form-control" />
                <input asp-for="TopicId" value="@Model.TopicId" type="hidden" class="form-control" />
                <input asp-for="CreatorId" value="@Model.CreatorId" type="hidden" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

