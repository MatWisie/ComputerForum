@using System.Security.Claims
@model ComputerForum.ViewModels.CommentCreateVM

    <div class="col-md-4">
        <form asp-action="CreateComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Enter content</label>
                <textarea asp-for="Content" class="form-control" maxlength="1000"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <input asp-for="CreatorId" type="hidden" value="@User.FindFirst(ClaimTypes.NameIdentifier).Value"/>
            <input asp-for="TopicId" type="hidden" value="@Model.TopicId"/>
            <input asp-for="QuotedStatement" type="hidden" value="@Model.QuotedStatement"/>
            <div class="form-group">
                <input type="submit" value="Reply" class="btn btn-primary" />
            </div>
        </form>
        </div>
