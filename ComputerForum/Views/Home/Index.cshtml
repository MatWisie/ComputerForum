@model IList<Category>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div>
    <h1>Forum Categories</h1>
    <table class="table table-dark table-hover">
        <thead>
            <th>Name</th>
            <th>Creator</th>
            <th>Date</th>
        </thead>
        @foreach(var category in Model)
        {
            <tr onclick="location.href = '@Url.Action("Topic","Home", new {id = @category.Id})'"> <!--Which I HOPE will soon be added-->
                <td>@category.Name</td>
                <td>@category.User.Name</td>
                <td>@category.CreationDate.ToShortDateString()</td>
            </tr>
        }
        <!-- Job for you, make it look good and fancy mkay? -->
    </table>
</div>